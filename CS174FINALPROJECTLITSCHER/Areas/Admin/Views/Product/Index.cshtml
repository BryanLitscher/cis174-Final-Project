@model List<Product>
@{
	ViewData["Title"] = "Index";
}

<h1>Product Management</h1>

<h5 class="mt-2"><a asp-action="Add" asp-area="Admin">Add a Product</a></h5>
<div class="p-lg-5">
	<table class="table table-bordered table-striped table-sm">
		<thead>
			<tr><th>Product Id</th><th>Name</th><th></th></tr>
		</thead>
		<tbody>
			@foreach (Product p in Model)
			{
				<tr>
					<td>@p.productID</td>
					<td>@p.productName</td>
					<td>
						<a asp-action="Edit" asp-area="Admin" asp-route-id="@p.productID"
						   class="btn btn-primary">Edit</a>
						<a asp-action="Delete" asp-area="Admin" asp-route-id="@p.productID"
						   class="btn btn-primary">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>